<!-- Page Heading -->
<div class="row heading page-header">
	<div class="col-lg-12">
		<h1>
			<span id="mirroredName">Name</span>
			<small>Room</small>
		</h1>
	</div>
</div>
<!-- /.row -->

<div class="row">
	<div class="col-xs-12">

		<div class="row roomContainer open editable">
			<div class="col-md-12">
				<div class="frameContainer">
					<div class="pictureContainer">
						<img id="image" src="/images/painting.jpg" alt="">
						<div class="uploadReminder">Click<br />to<br />Upload</div>
						<div class="imageError"></div>
					</div>
					<span id="name" class="roomName" contenteditable data-placeholder="Name">Name</span>
					<span id="subheading" class="roomSubheading" contenteditable data-placeholder="Subheading">Subheading</span>
					<span class="frame"></span>
				</div>
			</div>
		</div>

		<form id="uploadPainting">
			<input id="imageUpload" class="hidden" type="file" accept="image/*" />
		</form>

		<h4 id="description" contenteditable data-placeholder="Description">Description</h4>

		<div class="spacer-80"></div>

		<button id="createButton" class="btn btn-lg btn-paper">Create</button>
	</div>
</div>

<hr />

